{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/validate-yaml-before-write.sh",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/validate-yaml-before-edit.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write:*.yaml|Edit:*.yaml",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/quality-gate.sh",
            "timeout": 15
          },
          {
            "type": "command",
            "command": ".claude/hooks/auto-format-yaml.sh",
            "timeout": 5
          },
          {
            "type": "command",
            "command": ".claude/hooks/auto-create-metadata.sh",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "Write:*_meta.yaml|Edit:*_meta.yaml",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/validate-metadata.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/session-setup.sh",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "python .claude/hooks/check-artifact-updates.py",
            "timeout": 30
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/check-index.sh",
            "timeout": 5
          }
        ]
      }
    ]
  },
  "skills": {
    "paths": [
      "./.claude/skills"
    ],
    "enabled": [
      "kb-search",
      "kb-validate",
      "kb-index",
      "kb-create",
      "audit-quality",
      "find-duplicates",
      "research-enhance"
    ],
    "auto_discover": true
  },
  "agents": {
    "paths": [
      "./.claude/agents"
    ],
    "enabled": [
      "kb-curator"
    ],
    "auto_discover": true
  },
  "commands": {
    "paths": [
      "./.claude/commands"
    ]
  },
  "mcpServers": {}
}
