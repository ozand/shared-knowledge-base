{
  "$schema": "https://opencode.ai/schema.json",
  "permission": {
    "read": {
      "*.env": "deny",
      "*.pem": "deny",
      "*.key": "deny",
      "*": "allow"
    },
    "edit": {
      "AGENTS.md": "allow",
      "*": "ask"
    },
    "bash": {
      "git status": "allow",
      "ls": "allow",
      "grep": "allow",
      "*": "ask"
    }
  },
  "mcp": {
    "github": {
      "enabled": false
    }
  },
  "watcher": {
    "ignore": [
      ".git/**",
      "node_modules/**",
      "dist/**",
      ".opencode/**"
    ]
  },
  "instructions": [
    "AGENTS.md"
  ]
}
